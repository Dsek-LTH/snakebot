<included>

    <contextName>Snake-bot-server</contextName>

    <appender name="loggly" class="ch.qos.logback.ext.loggly.LogglyAppender">
        <endpointUrl>http://logs-01.loggly.com/inputs/d515be25-6588-4bff-a95b-01ecc84167f6/tag/logback</endpointUrl>
        <pattern>%d{"ISO8601", UTC}  %p %t %c{0}.%M - %m%n</pattern>
    </appender>


    <appender name="loggly-async" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="loggly" />
        <queueSize>2048</queueSize>
        <neverBlock>true</neverBlock>
    </appender>

    <logger name="se" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="loggly-async" />
    </root>

</included>

